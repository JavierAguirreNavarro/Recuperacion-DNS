Vagrant.configure("2") do |config|
  # Máquina virtual DNSA
  config.vm.define "DNSA" do |dnsa|
    dnsa.vm.box = "ubuntu/focal64"  # Usa Ubuntu 20.04 como base
    dnsa.vm.hostname = "DNSA"
    dnsa.vm.network "private_network", ip: "192.168.57.11"
    dnsa.vm.provider "virtualbox" do |vb|
      vb.memory = "1024"
      vb.cpus = 1
    end
  end

  # Máquina virtual DNSB
  config.vm.define "DNSB" do |dnsb|
    dnsb.vm.box = "ubuntu/focal64"
    dnsb.vm.hostname = "DNSB"
    dnsb.vm.network "private_network", ip: "192.168.57.12"
    dnsb.vm.provider "virtualbox" do |vb|
      vb.memory = "1024"
      vb.cpus = 1
    end
  end
end
